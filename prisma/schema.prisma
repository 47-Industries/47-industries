  parentInvoiceId String?                        // If generated from a recurring template

  // Tracking
  sentAt          DateTime?
  viewedAt        DateTime?
  createdBy       String        // User ID who created the invoice

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([invoiceNumber])
  @@index([customerEmail])
  @@index([status])
  @@index([inquiryId])
  @@index([customRequestId])
  @@index([clientId])
  @@index([isRecurring])
}

model InvoiceItem {
  id          String  @id @default(cuid())
  invoiceId   String
  invoice     Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  description String
  quantity    Int     @default(1)
  unitPrice   Decimal @db.Decimal(10, 2)
  total       Decimal @db.Decimal(10, 2)

  @@index([invoiceId])
}

// Track individual payments on an invoice (supports partial payments)
model InvoicePayment {
  id          String   @id @default(cuid())
  invoiceId   String
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  // Payment details
  amount      Decimal  @db.Decimal(10, 2)
  method      String   // STRIPE, CASH, CHECK, ZELLE, BANK_TRANSFER, WIRE
  reference   String?  // Check number, transaction ID, confirmation number

  // Stripe details (if applicable)
  stripePaymentId String?  // Stripe payment intent/charge ID

  // Notes
  notes       String?  @db.Text

  // Tracking
  paidAt      DateTime @default(now())
  recordedBy  String   // Admin user ID who recorded this payment

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([invoiceId])
  @@index([method])
  @@index([paidAt])
}

// ============================================
// CLIENTS SYSTEM (Service Clients)
// ============================================

enum ClientType {
  LEAD        // From LeadChopper, not yet contacted
  PENDING     // Just submitted inquiry, needs triage
  PROSPECT    // In discussion, no contract yet
  ACTIVE      // Has active project(s)
  PAST        // Completed work, potential for more
}

enum ClientSource {
  INQUIRY     // Came through website inquiry form
  LEADCHOPPER // Generated via LeadChopper
  REFERRAL    // Referred by existing client
  DIRECT      // Direct outreach/known contact
}

enum ClientProjectStatus {
  PROPOSAL    // Quote sent, awaiting approval
  ACTIVE      // In development
  ON_HOLD     // Paused
  COMPLETED   // Delivered
  CANCELLED   // Not moving forward
}

enum ContractStatus {
  DRAFT
  SENT
  SIGNED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum ClientActivityType {
  EMAIL_SENT
  EMAIL_RECEIVED
  QUOTE_SENT
  CALL
  MEETING
  INVOICE_SENT
  INVOICE_PAID
  CONTRACT_SENT
  CONTRACT_SIGNED
  NOTE
  STATUS_CHANGE
  PROJECT_CREATED
  PROJECT_COMPLETED
  LEADCHOPPER_SYNC
}

model Client {
  id                String   @id @default(cuid())
  clientNumber      String   @unique  // CLI-20260114-0001

  // Company Info
  name              String              // Business name
  email             String
  phone             String?
  website           String?
  address           String?  @db.Text
  industry          String?             // e.g., "Smoke Shop", "SaaS", "Restaurant"

  // Classification
  type              ClientType          @default(PENDING)
  source            ClientSource        @default(INQUIRY)

  // LeadChopper Integration
  leadchopperId     String?  @unique    // LeadChopper Lead ID
  leadchopperOrgId  String?             // LeadChopper Organization ID

  // Financials (auto-calculated)
  totalRevenue      Decimal  @db.Decimal(10, 2) @default(0)
  totalOutstanding  Decimal  @db.Decimal(10, 2) @default(0)

  // Client Portal - Link to User account
  userId            String?  @unique    // Link to User for portal access
  user              User?    @relation(fields: [userId], references: [id])

  // Stripe Integration for autopay
  stripeCustomerId      String?  @unique    // Stripe Customer ID
  autopayEnabled        Boolean  @default(false)
  defaultPaymentMethod  String?             // Stripe Payment Method ID (pm_xxxx)

  // Relationship summary (admin-written narrative about the client)
  relationshipSummary   String?  @db.Text   // "Smoke shop client since Jan 2026..."

  // Relations
  contacts          ClientContact[]
  projects          ClientProject[]
  invoices          Invoice[]
  contracts         Contract[]
  notes             ClientNote[]
  activities        ClientActivity[]
  messages          ClientMessage[]

  // Linked inquiry (if converted from inquiry)
  inquiryId         String?  @unique
  inquiry           ServiceInquiry? @relation(fields: [inquiryId], references: [id])

  // Tracking
  assignedTo        String?             // Team member user ID
  lastContactedAt   DateTime?
  nextFollowUpAt    DateTime?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([clientNumber])
  @@index([email])
  @@index([type])
  @@index([source])
  @@index([assignedTo])
  @@index([userId])
  @@index([stripeCustomerId])
}

model ClientContact {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  name        String
  email       String?
  phone       String?
  role        String?             // "Owner", "Manager", "Technical Contact"
  isPrimary   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clientId])
}

model ClientProject {
  id                String   @id @default(cuid())
  clientId          String
  client            Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  name              String              // "Spark8 Platform", "RingZero Setup"
  description       String?  @db.Text
  type              ServiceType         // WEB_DEVELOPMENT, AI_SOLUTIONS, etc.
  status            ClientProjectStatus @default(PROPOSAL)

  // Portfolio sync - when published to public portfolio
  serviceProjectId  String?  @unique    // Links to ServiceProject if published
  publishedAt       DateTime?           // When it was published to portfolio

  // Pricing
  contractValue     Decimal? @db.Decimal(10, 2)
  monthlyRecurring  Decimal? @db.Decimal(10, 2)

  // Timeline
  startDate         DateTime?
  estimatedEndDate  DateTime?
  completedAt       DateTime?

  // Links
  inquiryId         String?             // Original ServiceInquiry
  repositoryUrl     String?
  productionUrl     String?
  stagingUrl        String?

  // Attribution - who brought in/closed this project
  referredByPartnerId String?           // Partner who referred this lead
  referredByPartner   Partner?          @relation(fields: [referredByPartnerId], references: [id])
  closedByUserId      String?           // Team member who closed the sale

  // Relations
  contracts         Contract[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([clientId])
  @@index([status])
  @@index([referredByPartnerId])
}

model ClientNote {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  authorId    String
  authorName  String

  content     String   @db.Text
  isPinned    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clientId])
}

model ClientActivity {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  type        ClientActivityType
  description String
  metadata    Json?               // Extra data (email subject, invoice amount, etc.)

  performedBy String?             // User ID
  performedAt DateTime @default(now())

  @@index([clientId])
  @@index([type])
  @@index([performedAt])
}

model ClientMessage {
  id          String   @id @default(cuid())
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  // Message content
  subject     String?
  message     String   @db.Text
  isFromAdmin Boolean  @default(true)
  senderName  String
  senderEmail String

  // Quote info (if this message contains a quote)
  isQuote         Boolean  @default(false)
  quoteAmount     Decimal? @db.Decimal(10, 2)
  quoteMonthly    Decimal? @db.Decimal(10, 2)
  quoteValidDays  Int?

  // Email threading
  emailMessageId  String?
  emailInReplyTo  String?

  createdAt   DateTime @default(now())

  @@index([clientId])
  @@index([isFromAdmin])
}

model Contract {
  id              String   @id @default(cuid())
  contractNumber  String   @unique  // CON-20260114-0001

  clientId        String
  client          Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  projectId       String?
  project         ClientProject? @relation(fields: [projectId], references: [id])

  title           String
  description     String?  @db.Text

  // File storage (R2 upload or external link)
  fileUrl         String?             // R2 URL or external link
  fileName        String?
  isExternalLink  Boolean  @default(false)

  // Terms
  totalValue      Decimal  @db.Decimal(10, 2)
  monthlyValue    Decimal? @db.Decimal(10, 2)
  startDate       DateTime?
  endDate         DateTime?

  status          ContractStatus @default(DRAFT)
  signedAt        DateTime?
  signedBy        String?             // Name of person who signed (legacy)

  // Annotation support (DocuSign-like)
  annotations     Json?               // Stored annotations as JSON (highlights, comments, drawings)
  signatureUrl    String?             // Signature image URL (stored in R2)
  signedByName    String?             // Full name of signer
  signedByEmail   String?             // Email of signer
  signedByIp      String?             // IP address when signed

  createdBy       String              // User ID who created
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([clientId])
  @@index([contractNumber])
  @@index([status])
}

// ============================================
// PARTNER MANAGEMENT (External Contractors/Affiliates)
// ============================================

model Partner {
  id                String   @id @default(cuid())
  partnerNumber     String   @unique  // PTR-20260115-0001

  // Link to User account for portal access
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id])

  // Partner Info
  name              String
  email             String
  phone             String?
  company           String?

  // Commission Structure (configurable per partner)
  commissionType    String   @default("TIERED")  // FLAT, TIERED, CUSTOM
  firstSaleRate     Decimal  @db.Decimal(5, 2)   // e.g., 50.00 for 50%
  recurringRate     Decimal  @db.Decimal(5, 2)   // e.g., 30.00 for 30%

  // Status
  status            String   @default("ACTIVE")  // ACTIVE, INACTIVE

  // Stripe Connect for automated payouts
  stripeConnectId           String?   // Stripe Connect account ID
  stripeConnectStatus       String?   // PENDING, CONNECTED, DISABLED
  stripeConnectOnboardingUrl String?  @db.Text // Onboarding link if not complete

  // Alternative payment methods (if not using Stripe)
  zelleEmail        String?
  zellePhone        String?
  venmoUsername     String?
  cashAppTag        String?
  mailingAddress    String?  @db.Text

  // Relations
  leads             PartnerLead[]
  commissions       PartnerCommission[]
  payouts           PartnerPayout[]
  contract          PartnerContract?
  referredProjects  ClientProject[]     // Projects this partner referred

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([partnerNumber])
  @@index([stripeConnectId])
}

model PartnerContract {
  id            String   @id @default(cuid())
  partnerId     String   @unique
  partner       Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  title         String
  description   String?  @db.Text
  fileUrl       String?
  fileName      String?

  status        String   @default("DRAFT")  // DRAFT, SENT, SIGNED, ACTIVE
  signedAt      DateTime?

  // E-signature fields
  signatureUrl    String?       // Drawn signature image (R2 URL)
  signedByName    String?       // Typed legal name
  signedByEmail   String?       // Email at time of signing
  signedByIp      String?       // IP address for audit trail
  signedByUserId  String?       // User who signed

  startDate     DateTime?
  endDate       DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([partnerId])
}

model PartnerLead {
  id            String   @id @default(cuid())
  leadNumber    String   @unique  // LEAD-20260115-0001

  partnerId     String
  partner       Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  // Lead Info (submitted by partner)
  businessName  String
  contactName   String
  email         String
  phone         String?
  website       String?
  description   String?  @db.Text

  // Status tracking
  status        String   @default("NEW")  // NEW, CONTACTED, QUALIFIED, CONVERTED, LOST

  // Conversion (when lead becomes client)
  clientId      String?  @unique          // Links to Client when converted
  projectId     String?                   // Links to ClientProject when project created
  closedBy      String?                   // User ID of who closed the sale
  closedAt      DateTime?

  // Commission tracking
  commissions   PartnerCommission[]

  notes         String?  @db.Text

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([partnerId])
  @@index([status])
  @@index([clientId])
}

model PartnerCommission {
  id            String   @id @default(cuid())
  partnerId     String
  partner       Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  leadId        String
  lead          PartnerLead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  // Commission Details
  type          String   // FIRST_SALE, RECURRING
  invoiceId     String?  // Link to Invoice that triggered this commission
  baseAmount    Decimal  @db.Decimal(10, 2)  // Invoice/payment amount
  rate          Decimal  @db.Decimal(5, 2)   // Commission rate used
  amount        Decimal  @db.Decimal(10, 2)  // Calculated commission

  // Status
  status        String   @default("PENDING")  // PENDING, APPROVED, PAID

  // Payout tracking
  payoutId      String?
  payout        PartnerPayout? @relation(fields: [payoutId], references: [id])

  notes         String?  @db.Text

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([partnerId])
  @@index([leadId])
  @@index([status])
  @@index([payoutId])
}

model PartnerPayout {
  id            String   @id @default(cuid())
  payoutNumber  String   @unique  // PAY-20260115-0001
  partnerId     String
  partner       Partner  @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  // Payout Details
  amount        Decimal  @db.Decimal(10, 2)
  method        String?  // STRIPE_CONNECT, CASH, CHECK, ZELLE, VENMO
  reference     String?  // Check number, transaction ID, Stripe transfer ID
  stripeTransferId String? // If paid via Stripe Connect

  // Status
  status        String   @default("PENDING")  // PENDING, PAID
  paidAt        DateTime?
  paidBy        String?  // Admin user ID who marked it paid

  // Commissions included in this payout
  commissions   PartnerCommission[]

  notes         String?  @db.Text

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([partnerId])
  @@index([status])
  @@index([payoutNumber])
}

// ============================================
// TEAM MEMBER MANAGEMENT (Internal Employees)
// ============================================

model TeamMember {
  id                String   @id @default(cuid())
  employeeNumber    String   @unique  // EMP-001

  // Link to User account
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id])

  // Personal Info
  name              String
  email             String
  phone             String?
  address           String?  @db.Text
  dateOfBirth       DateTime?

  // Employment
  title             String
  department        String?
  startDate         DateTime
  endDate           DateTime?
  status            String   @default("ACTIVE")  // ACTIVE, ON_LEAVE, TERMINATED

  // Compensation
  salaryType        String   @default("SALARY")  // SALARY, HOURLY, CONTRACT
  salaryAmount      Decimal? @db.Decimal(10, 2)
  salaryFrequency   String?  // ANNUAL, MONTHLY, BIWEEKLY, HOURLY

  // Equity
  equityPercentage  Decimal? @db.Decimal(5, 2)
  equityVestingStart DateTime?
  equityVestingEnd  DateTime?
  equityNotes       String?  @db.Text

  // Relations
  contracts         TeamMemberContract[]
  documents         TeamMemberDocument[]
  payments          TeamMemberPayment[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([employeeNumber])
}

model TeamMemberContract {
  id              String   @id @default(cuid())
  teamMemberId    String
  teamMember      TeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)

  title           String
  type            String   // EMPLOYMENT, NDA, NON_COMPETE, EQUITY, OTHER
  description     String?  @db.Text

  fileUrl         String?
  fileName        String?

  status          String   @default("DRAFT")  // DRAFT, SENT, SIGNED, ACTIVE, EXPIRED
  signedAt        DateTime?

  // E-signature fields
  signatureUrl    String?       // Drawn signature image (R2 URL)
  signedByName    String?       // Typed legal name
  signedByEmail   String?       // Email at time of signing
  signedByIp      String?       // IP address for audit trail
  signedByUserId  String?       // User who signed

  effectiveDate   DateTime?
  expirationDate  DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([teamMemberId])
  @@index([type])
}

model TeamMemberDocument {
  id              String   @id @default(cuid())
  teamMemberId    String
  teamMember      TeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)

  name            String
  type            String   // W9, I9, TAX_FORM, ID, SSN_CARD, DIRECT_DEPOSIT, OTHER
  description     String?

  fileUrl         String
  fileName        String
  fileSize        Int?     // in bytes

  uploadedBy      String   // Admin user ID

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([teamMemberId])
  @@index([type])
}

model TeamMemberPayment {
  id              String   @id @default(cuid())
  paymentNumber   String   @unique  // TPAY-20260115-0001
  teamMemberId    String
  teamMember      TeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)

  // Payment Details
  type            String   // SALARY, BONUS, REIMBURSEMENT, EQUITY_PAYOUT, OTHER
  amount          Decimal  @db.Decimal(10, 2)
  description     String?

  // Period (for salary payments)
  periodStart     DateTime?
  periodEnd       DateTime?

  // Payment Info
  method          String?  // CHECK, DIRECT_DEPOSIT, ZELLE, WIRE
  reference       String?  // Check number, transaction ID

  status          String   @default("PENDING")  // PENDING, PAID, CANCELLED
  paidAt          DateTime?
  paidBy          String?  // Admin user ID

  notes           String?  @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([teamMemberId])
  @@index([status])
  @@index([type])
  @@index([paymentNumber])
}
