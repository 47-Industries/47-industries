// 47 Industries E-Commerce Platform - Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// Note: DATABASE_URL should be constructed from Railway's individual MySQL variables:
// mysql://${MYSQLUSER}:${MYSQLPASSWORD}@${MYSQLHOST}:${MYSQLPORT}/${MYSQLDATABASE}

// ============================================
// AUTHENTICATION & USER MANAGEMENT
// ============================================

enum Role {
  CUSTOMER
  ADMIN
  SUPER_ADMIN
}

model User {
  id            String    @id @default(cuid())
  username      String?   @unique
  email         String?   @unique
  name          String?
  password      String?
  image         String?
  role          Role      @default(CUSTOMER)
  emailVerified DateTime?

  // Recovery/backup email for admins
  backupEmail   String?

  // Admin Permissions (JSON array of permission strings)
  // e.g., ["products", "orders", "users", "settings", "email", "expenses"]
  permissions   Json?

  // Email Access (JSON array of email addresses the user can access)
  // e.g., ["support@47industries.com", "sales@47industries.com"]
  emailAccess   Json?

  // Founder flag - the 4 founding members who split household bills
  // Staff hired later won't have this flag and won't see personal splits
  isFounder     Boolean   @default(false)

  // Zoho Mail Integration
  zohoAccessToken   String?   @db.Text
  zohoRefreshToken  String?   @db.Text
  zohoTokenExpiry   DateTime?

  // Invite token (for partner/team member invites)
  inviteToken       String?   @unique
  inviteTokenExpiry DateTime?

  // Relations
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  cartItems     CartItem[]
  addresses     Address[]
  emailLogs     EmailLog[]
  blogPosts     BlogPost[]

  // Expense tracking relations (for founders)
  billPayments  BillPayment[]
  founderPayments FounderPayment[] @relation("FounderPayments")

  // Client portal - if this user is linked to a Client account
  client        Client?

  // Partner portal - if this user is a partner/contractor
  partner       Partner?

  // Team member - if this user is an internal team member
  teamMember    TeamMember?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([username])
  @@index([email])
  @@index([isFounder])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// E-COMMERCE - PRODUCTS & CATEGORIES
// ============================================

enum ProductType {
  PHYSICAL
  DIGITAL
}

model Category {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?     @db.Text
  image       String?
  productType ProductType @default(PHYSICAL)  // Categories are either for digital or physical products
  parentId    String?
  parent      Category?   @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    Category[]  @relation("CategoryToCategory")
  products    Product[]
  active      Boolean     @default(true)

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([parentId])
  @@index([productType])
}

model Product {
  id            String       @id @default(cuid())
  name          String
  slug          String       @unique
  description   String       @db.Text
  shortDesc     String?      @db.VarChar(500)
  price         Decimal      @db.Decimal(10, 2)
  comparePrice  Decimal?     @db.Decimal(10, 2)
  costPrice     Decimal?     @db.Decimal(10, 2)
  images        Json         // Array of image URLs
  categoryId    String
  category      Category     @relation(fields: [categoryId], references: [id])
  stock         Int          @default(0)
  sku           String?      @unique
  tags          Json?        // Array of tags
  featured      Boolean      @default(false)
  active        Boolean      @default(true)

  // Product Type
  productType   ProductType  @default(PHYSICAL)

  // Link to alternate version (physical <-> digital)
  linkedProductId  String?   // ID of the physical or digital counterpart

  // Physical Product Fields
  weight        Decimal?     @db.Decimal(10, 2)
  dimensions    String?
  requiresShipping Boolean   @default(true)

  // Digital Product Fields
  digitalFileUrl   String?   @db.Text  // R2 URL for the downloadable file
  digitalFileName  String?             // Original filename for display
  digitalFileSize  Int?                // File size in bytes
  downloadLimit    Int?      @default(5)  // Max downloads per purchase (null = unlimited)
  downloadExpiry   Int?      @default(30) // Days until download link expires (null = never)

  // 3D Printing specific (for physical 3D printed products)
  material      String?
  printTime     Int?         // in minutes
  layerHeight   Decimal?     @db.Decimal(5, 3)
  infill        Int?         // percentage

  // Relations
  orderItems    OrderItem[]
  cartItems     CartItem[]
  reviews       Review[]
  digitalDownloads DigitalDownload[]
  inventoryAlerts  InventoryAlert[]
  stockMovements   StockMovement[]
  variants      ProductVariant[]

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@index([sku])
  @@index([featured])
  @@index([productType])
}

// Product Variants (e.g., Size: Large, Color: Blue)
model ProductVariant {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  name        String   // Generated name like "Large / Blue"
  sku         String?  @unique
  price       Decimal  @db.Decimal(10, 2)
  comparePrice Decimal? @db.Decimal(10, 2)
  stock       Int      @default(0)

  // Options as JSON: { "Size": "Large", "Color": "Blue" }
  options     Json

  // Media
  image       String?

  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([sku])
}

// Product Option Types (e.g., Size, Color, Material)
model ProductOptionType {
  id          String   @id @default(cuid())
  name        String   @unique  // "Size", "Color", "Material"

  // Available values as JSON array: ["S", "M", "L", "XL"]
  values      Json

  sortOrder   Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Track digital product downloads
model DigitalDownload {
  id            String   @id @default(cuid())
  productId     String
  product       Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderId       String
  orderItemId   String

  // Download tracking
  downloadToken String   @unique  // Unique token for download URL
  downloadCount Int      @default(0)
  maxDownloads  Int?     // Copied from product at purchase time
  expiresAt     DateTime?

  // Customer info
  customerEmail String

  createdAt     DateTime @default(now())
  lastDownloadAt DateTime?

  @@index([productId])
  @@index([orderId])
  @@index([downloadToken])
  @@index([customerEmail])
}

// ============================================
// SHOPPING CART
// ============================================

model CartItem {
  id         String   @id @default(cuid())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId  String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity   Int      @default(1)
  sessionId  String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([productId])
  @@index([sessionId])
}

// ============================================
// ORDERS & CHECKOUT
// ============================================

enum OrderStatus {
  PENDING
  PROCESSING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
  REFUNDED
}

model Order {
  id              String        @id @default(cuid())
  orderNumber     String        @unique
  userId          String?
  user            User?         @relation(fields: [userId], references: [id])

  // Customer Info (for guest checkout)
  customerName    String
  customerEmail   String
  customerPhone   String?

  // Pricing
  subtotal        Decimal       @db.Decimal(10, 2)
  tax             Decimal       @db.Decimal(10, 2) @default(0)
  shipping        Decimal       @db.Decimal(10, 2) @default(0)
  discount        Decimal       @db.Decimal(10, 2) @default(0)
  total           Decimal       @db.Decimal(10, 2)

  // Status
  status          OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)

  // Payment
  stripePaymentId String?       @unique
  stripeSessionId String?       @unique

  // Shipping
  shippingAddressId String?
  shippingAddress Address?      @relation(fields: [shippingAddressId], references: [id])
  trackingNumber  String?
  carrier         String?

  // Discount Code
  discountCode    String?

  // Relations
  items           OrderItem[]
  returns         ReturnRequest[]

  // Notes
  customerNotes   String?       @db.Text
  adminNotes      String?       @db.Text

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([userId])
  @@index([orderNumber])
  @@index([status])
  @@index([stripePaymentId])
  @@index([shippingAddressId])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product  @relation(fields: [productId], references: [id])

  name        String
  price       Decimal  @db.Decimal(10, 2)
  quantity    Int
  total       Decimal  @db.Decimal(10, 2)

  // Snapshot of product details at time of order
  image       String?
  sku         String?

  createdAt   DateTime @default(now())

  @@index([orderId])
  @@index([productId])
}

model Address {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName    String
  company     String?
  address1    String
  address2    String?
  city        String
  state       String
  zipCode     String
  country     String  @default("US")
  phone       String?

  isDefault   Boolean @default(false)

  orders      Order[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

// ============================================
// DISCOUNT CODES
// ============================================

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

model DiscountCode {
  id            String        @id @default(cuid())
  code          String        @unique
  description   String?       @db.Text
  type          DiscountType
  value         Decimal       @db.Decimal(10, 2)
  minPurchase   Decimal?      @db.Decimal(10, 2)
  maxUses       Int?
  usedCount     Int           @default(0)
  active        Boolean       @default(true)
  startsAt      DateTime?
  expiresAt     DateTime?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([code])
}

// ============================================
// CUSTOM 3D PRINTING REQUESTS
// ============================================

enum CustomRequestStatus {
  PENDING
  REVIEWING
  QUOTED
  APPROVED
  IN_PRODUCTION
  COMPLETED
  CANCELLED
}

model CustomRequest {
  id            String              @id @default(cuid())
  requestNumber String              @unique

  // Customer Info
  name          String
  email         String
  phone         String?
  company       String?

  // File Upload (optional - customer can provide description instead)
  fileUrl       String?
  fileName      String?
  fileSize      Int?                // in bytes
  description   String?             @db.Text

  // Specifications
  material      String
  finish        String
  color         String
  quantity      Int
  dimensions    String?
  scale         Decimal?            @db.Decimal(5, 2)

  // Additional Info
  notes         String?             @db.Text
  deadline      DateTime?

  // Add-on Services
  expedited     Boolean             @default(false)  // Expedited production (+50%)
  assembly      Boolean             @default(false)  // Assembly service
  packaging     Boolean             @default(false)  // Premium packaging
  estimatedCost Decimal?            @db.Decimal(10, 2)  // Customer's estimated cost from form

  // Quote
  estimatedPrice Decimal?           @db.Decimal(10, 2)
  estimatedDays  Int?
  quoteNotes     String?            @db.Text
  quotedAt       DateTime?
  quotedBy       String?

  // Status
  status        CustomRequestStatus @default(PENDING)

  // Admin Notes
  adminNotes    String?             @db.Text

  // Email Conversation Threading
  messages      CustomRequestMessage[]

  // Invoices
  invoices      Invoice[]

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  @@index([email])
  @@index([status])
  @@index([requestNumber])
}

// Custom Request Messages (email threading for 3D print requests)
model CustomRequestMessage {
  id          String         @id @default(cuid())
  requestId   String
  request     CustomRequest  @relation(fields: [requestId], references: [id], onDelete: Cascade)
  message     String         @db.Text
  isFromAdmin Boolean        @default(false)
  senderName  String?
  senderEmail String?

  // Email metadata for threading
  emailMessageId String?      @unique
  emailInReplyTo String?
  emailSubject   String?

  // Quote information (if this message includes a quote)
  isQuote     Boolean        @default(false)
  quoteAmount Decimal?       @db.Decimal(10, 2)
  quoteValidDays Int?

  createdAt   DateTime       @default(now())

  @@index([requestId])
  @@index([emailMessageId])
}

// ============================================
// SERVICE INQUIRIES (Web/App Development)
// ============================================

enum ServiceType {
  WEB_DEVELOPMENT
  APP_DEVELOPMENT
  AI_SOLUTIONS
  CONSULTATION
  OTHER
}

enum InquiryStatus {
  NEW
  IN_PROGRESS
  CONTACTED
  QUOTED
  PROPOSAL_SENT
  NEGOTIATING
  ACCEPTED
  DECLINED
  COMPLETED
  CONVERTED
  CANCELLED
}

model ServiceInquiry {
  id            String         @id @default(cuid())
  inquiryNumber String         @unique

  // Customer Info
  name          String
  email         String
  phone         String?
  company       String?
  website       String?

  // Service Details
  serviceType   ServiceType
  budget        String?
  timeline      String?
  description   String         @db.Text

  // Selected Package (optional)
  packageId     String?
  package       ServicePackage? @relation("PackageInquiries", fields: [packageId], references: [id])

  // Attachments
  attachments   Json?

  // Status
  status        InquiryStatus  @default(NEW)

  // Follow-up
  assignedTo    String?
  estimatedCost Decimal?       @db.Decimal(10, 2)
  proposalUrl   String?
  adminNotes    String?        @db.Text

  // Messages/Responses
  messages      InquiryMessage[]

  // Invoices
  invoices      Invoice[]

  // Client (if converted to client)
  client        Client?

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([email])
  @@index([status])
  @@index([serviceType])
  @@index([inquiryNumber])
  @@index([packageId])
}

// Inquiry Messages - for communication between customer and team
model InquiryMessage {
  id          String         @id @default(cuid())
  inquiryId   String
  inquiry     ServiceInquiry @relation(fields: [inquiryId], references: [id], onDelete: Cascade)

  // Message content
  message     String         @db.Text
  isFromAdmin Boolean        @default(false)  // true = from team, false = from customer
  senderName  String?                         // Name of sender (admin name or customer name)
  senderEmail String?                         // Email address of sender

  // Email threading metadata
  emailMessageId String?      @unique          // Unique Message-ID header from sent email
  emailInReplyTo String?                      // In-Reply-To header (references parent message)
  emailSubject   String?                      // Email subject line

  // For quotes
  isQuote     Boolean        @default(false)
  quoteAmount Decimal?       @db.Decimal(10, 2)
  quoteMonthly Decimal?      @db.Decimal(10, 2)
  quoteValidDays Int?

  createdAt   DateTime       @default(now())

  @@index([inquiryId])
  @@index([emailMessageId])
}

// ============================================
// SERVICE PACKAGES & PRICING
// ============================================

enum ServiceCategory {
  WEB_DEVELOPMENT      // Websites, landing pages, marketing sites
  WEB_APP              // Web applications, dashboards, SaaS platforms
  IOS_APP              // Native iOS applications
  ANDROID_APP          // Native Android applications
  CROSS_PLATFORM_APP   // React Native, Flutter (iOS + Android)
  AI_AUTOMATION        // AI receptionists, lead generators, business automations
  DESKTOP_APP          // Legacy - to be removed after data migration
  THREE_D_PRINTING     // 3D printing services
}

model ServicePackage {
  id            String          @id @default(cuid())
  name          String          // "Starter", "Professional", "Enterprise"
  slug          String          @unique
  category      ServiceCategory

  // Pricing
  price         Decimal?        @db.Decimal(10, 2) // null = "Custom Quote"
  priceDisplay  String?         // "Starting at $2,500" or "Custom"
  billingType   String          @default("one_time") // one_time, monthly, yearly
  priceNote     String?         // Additional pricing context

  // Description
  shortDesc     String          @db.VarChar(500)
  description   String          @db.Text

  // Features (JSON array of feature strings)
  features      Json

  // What's Included (detailed breakdown)
  includes      Json?           // [{title: "Design", items: ["Custom UI", "Responsive"]}]

  // Technical Details (for apps)
  platforms     Json?           // ["iOS", "Android", "Web", "Windows", "macOS"]
  techStack     Json?           // ["React Native", "Node.js", "PostgreSQL"]
  integrations  Json?           // ["Stripe", "Firebase", "AWS"]

  // Deliverables
  deliverables  Json?           // ["Source code", "Documentation", "Design files"]

  // Support & Maintenance
  supportIncluded   String?     // "30 days", "3 months", etc.
  revisionRounds    Int?        // Number of revision rounds included

  // Display
  isPopular     Boolean         @default(false)
  isActive      Boolean         @default(true)
  sortOrder     Int             @default(0)
  badge         String?         // "Best Value", "Most Popular", "Enterprise"

  // Timing
  estimatedDays Int?            // Estimated delivery time
  estimatedWeeks Int?           // Alternative: weeks estimate

  // Relations
  inquiries     ServiceInquiry[] @relation("PackageInquiries")

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([category])
  @@index([isActive])
  @@index([slug])
}

model ServiceFeature {
  id            String          @id @default(cuid())
  name          String
  description   String?         @db.Text
  icon          String?         // Icon name or URL
  category      ServiceCategory
  sortOrder     Int             @default(0)
  isActive      Boolean         @default(true)

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([category])
}

model ServiceProject {
  id            String          @id @default(cuid())
  title         String
  slug          String          @unique
  category      ServiceCategory // Primary category (kept for backwards compatibility)
  categories    Json?           // Array of category strings for multi-category projects

  // Client link (optional - links portfolio to Client record)
  clientId      String?
  clientProjectId String?       // Source ClientProject if published from client

  // Client info (display name, may differ from Client.name)
  clientName    String
  clientLogo    String?

  // Project details
  description   String          @db.Text
  challenge     String?         @db.Text
  solution      String?         @db.Text
  results       String?         @db.Text

  // Media
  thumbnailUrl  String?
  images        Json?           // Array of image URLs
  videoUrl      String?
  liveUrl       String?         // Link to live project

  // Branding
  accentColor   String?         // Hex color for project-specific branding (e.g., "#ff6600")

  // Tech stack used
  technologies  Json?           // Array of tech names

  // Testimonial
  testimonial   String?         @db.Text
  testimonialAuthor String?
  testimonialRole   String?

  // Display
  isFeatured    Boolean         @default(false)
  showInNavbar  Boolean         @default(false)  // Show in site navigation header
  isActive      Boolean         @default(true)
  sortOrder     Int             @default(0)

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([category])
  @@index([isFeatured])
  @@index([showInNavbar])
  @@index([slug])
  @@index([clientId])
  @@index([clientProjectId])
}

// ============================================
// CUSTOMER MANAGEMENT
// ============================================

model CustomerNote {
  id          String   @id @default(cuid())
  userId      String
  authorId    String   // Admin who created the note
  authorName  String   // Snapshot of admin name

  content     String   @db.Text
  isPinned    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([authorId])
}

model CustomerSegment {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  color       String   @default("#3b82f6") // For UI display

  // Conditions (JSON) - rules for auto-assignment
  // e.g., {"minOrders": 5, "minSpent": 500}
  conditions  Json?
  isAutomatic Boolean  @default(false) // Auto-assign based on conditions

  // Manual members
  memberIds   Json?    // Array of user IDs

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// NOTIFICATIONS & ACTIVITY
// ============================================

enum NotificationType {
  ORDER_NEW
  ORDER_STATUS
  ORDER_REFUND
  INVENTORY_LOW
  INVENTORY_OUT
  CUSTOM_REQUEST
  SERVICE_INQUIRY
  REVIEW_NEW
  USER_SIGNUP
  SYSTEM
}

model Notification {
  id          String           @id @default(cuid())
  type        NotificationType
  title       String
  message     String           @db.Text
  link        String?          // URL to relevant page

  // Targeting
  userId      String?          // Specific user, or null for all admins
  isRead      Boolean          @default(false)
  readAt      DateTime?

  // Metadata
  metadata    Json?            // Additional data (orderId, productId, etc.)

  createdAt   DateTime         @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([type])
  @@index([createdAt])
}

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  userName    String   // Snapshot

  action      String   // "created", "updated", "deleted", "viewed"
  entityType  String   // "order", "product", "user", etc.
  entityId    String?
  entityName  String?  // Human readable name

  details     Json?    // What changed
  ipAddress   String?
  userAgent   String?  @db.Text

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
}

// ============================================
// INVENTORY MANAGEMENT
// ============================================

model InventoryAlert {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  type        String   // "LOW_STOCK", "OUT_OF_STOCK", "OVERSTOCK"
  threshold   Int      // Stock level that triggered alert

  isResolved  Boolean  @default(false)
  resolvedAt  DateTime?
  resolvedBy  String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([productId, type])
  @@index([productId])
  @@index([isResolved])
  @@index([type])
}

model StockMovement {
  id          String   @id @default(cuid())
  productId   String
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  type        String   // "IN", "OUT", "ADJUSTMENT"
  quantity    Int      // Positive for in, negative for out

  reason      String?  @db.Text
  orderId     String?  // If related to an order
  userId      String?  // Who made the change
  userName    String?

  createdAt   DateTime @default(now())

  @@index([productId])
  @@index([type])
  @@index([createdAt])
}

// ============================================
// RETURNS & RMA
// ============================================

enum ReturnStatus {
  REQUESTED
  APPROVED
  REJECTED
  SHIPPED
  RECEIVED
  REFUNDED
  COMPLETED
}

enum ReturnReason {
  DEFECTIVE
  WRONG_ITEM
  NOT_AS_DESCRIBED
  CHANGED_MIND
  DAMAGED_SHIPPING
  OTHER
}

model ReturnRequest {
